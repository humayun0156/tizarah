# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.HelloController.index
GET     /blankpage                  controllers.HelloController.blankpage
GET     /create/account/head        controllers.HelloController.createAccountHead
GET     /app/transaction/debit      controllers.HelloController.debit
GET     /app/journal                controllers.HelloController.journal

POST    /create/account/xyz        controllers.MyTestController.createAccountHead()
POST    /create/account/abc         controllers.MyTestController.createSubAccount()
POST    /create/account/transaction  controllers.MyTestController.createTransaction()

GET     /business                   controllers.BusinessController.index
POST    /business/create            controllers.BusinessController.formSubmit



GET    /login                       controllers.LoginController.login
GET    /logout                      controllers.LoginController.logout
POST   /login/submit                controllers.LoginController.submit

GET   /admin/business/all           controllers.MyTestController.allBusiness()
GET   /admin/shop/all               controllers.MyTestController.allShop()
GET   /admin/head/all               controllers.MyTestController.allAccountHead()
GET   /admin/head/:id               controllers.MyTestController.headsByShopId(id: Long)
GET   /admin/acc/sub/:headId            controllers.MyTestController.subAccountByHeadId(headId: Long)


GET     /emp                        controllers.EmployeeController.index
GET     /emp/list                   controllers.EmployeeController.list()
POST    /emp/create                 controllers.EmployeeController.create()
POST    /emp/update                 controllers.EmployeeController.update
GET     /emp/delete                 controllers.EmployeeController.delete(empId: Int)

#GET     /login                      controllers.Assets.at(path = "/public", file = "html/login.html")
GET     /webjars/*file                      controllers.WebJarAssets.at(file)
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
